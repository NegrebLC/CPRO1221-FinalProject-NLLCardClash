<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ncc.nllcardclash.Controllers.MissionController"
            styleClass="root">

    <stylesheets>
        <URL value="@CSS/MissionSelect.css" />
    </stylesheets>

    <!-- Title Label -->
    <Text layoutX="20" layoutY="20" styleClass="label-title" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <effect>
            <DropShadow color="black" radius="4" spread="0.5"/>
        </effect>
        NLL Card Clash
    </Text>

    <GridPane AnchorPane.topAnchor="70" AnchorPane.leftAnchor="70" AnchorPane.rightAnchor="70"
              AnchorPane.bottomAnchor="70" alignment="CENTER" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="2"/>
        </padding>

        <!-- Mission Buttons -->
        <Button fx:id="mission1" text="Mission 1" onAction="#selectMission" GridPane.rowIndex="0"
                styleClass="mission-select"/>

        <Button fx:id="mission2" text="Mission 2" onAction="#selectMission" GridPane.rowIndex="1"
                styleClass="mission-select"/>

        <Button fx:id="mission3" text="Mission 3" onAction="#selectMission" GridPane.rowIndex="2"
                styleClass="mission-select"/>

        <Button fx:id="mission4" text="Mission 4" onAction="#selectMission" GridPane.rowIndex="3"
                styleClass="mission-select"/>

        <Button fx:id="mission5" text="Mission 5" onAction="#selectMission" GridPane.rowIndex="4"
                styleClass="mission-select"/>

        <Button fx:id="mission6" text="Mission 6" onAction="#selectMission" GridPane.rowIndex="5"
                styleClass="mission-select"/>

        <Button fx:id="mission7" text="Mission 7" onAction="#selectMission" GridPane.rowIndex="6"
                styleClass="mission-select"/>

        <Button fx:id="mission8" text="Mission 8" onAction="#selectMission" GridPane.rowIndex="7"
                styleClass="mission-select"/>

        <Button fx:id="mission9" text="Mission 9" onAction="#selectMission" GridPane.rowIndex="8"
                styleClass="mission-select"/>

        <Button fx:id="mission10" text="Mission 10" onAction="#selectMission" GridPane.rowIndex="9"
                styleClass="mission-select"/>
    </GridPane>

    <!-- Back Button -->
    <Button text="Back" onAction="#navigateBack" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
            styleClass="back-button"/>
</AnchorPane>
