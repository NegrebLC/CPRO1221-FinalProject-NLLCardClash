<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ncc.nllcardclash.Controllers.StartMenuController" styleClass="root">

  <stylesheets>
    <URL value="@CSS/StartMenu.css" />
  </stylesheets>

  <!-- Title Label -->
  <!-- Title Label -->
  <Text layoutX="20" layoutY="20" styleClass="label-title" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
    <effect>
      <DropShadow color="black" radius="4" spread="0.5"/>
    </effect>
    NLL Card Clash
  </Text>

  <!-- Start Game Button -->
  <Button text="Start Game" layoutX="255" layoutY="150" prefWidth="140" onAction="#startGame"
          styleClass="start-button" />

  <!-- Exit Button -->
  <Button text="Exit" layoutX="255" layoutY="200" prefWidth="140" onAction="#exitGame"
          styleClass="quit-button" />
</AnchorPane>